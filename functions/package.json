{
  "name": "handcricket-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Hand Cricket",
  "engines": {
    "node": "18"
  },
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "deploy:local": "FIREBASE_ENV=local firebase use local && firebase deploy --only functions",
    "deploy:staging": "FIREBASE_ENV=staging firebase use staging && firebase deploy --only functions",
    "deploy:prod": "FIREBASE_ENV=prod firebase use prod && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "logs:local": "firebase use local && firebase functions:log",
    "logs:staging": "firebase use staging && firebase functions:log",
    "logs:prod": "firebase use prod && firebase functions:log",
    "use:local": "firebase use local",
    "use:staging": "firebase use staging",
    "use:prod": "firebase use prod"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0"
  },
  "devDependencies": {
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0"
  },
  "private": true
}

